<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bazic"
    android:layout_height="match_parent"
    tools:context=".Connection">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="257dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/todoo"
        android:rotationX="13"
        android:scaleType="centerCrop"
        android:scrollbarSize="50dp"
        android:src="@drawable/a"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/texti"
        android:layout_width="262dp"
        android:layout_height="41dp"
        android:layout_marginTop="37dp"
        android:fontFamily="cursive"
        android:text="@string/connectez_vous"
        android:textAlignment="center"
        android:textColor="@color/Darkgreen"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/texta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:drawablePadding="11dp"
        android:hint="@string/na"
        android:textStyle="bold"
        android:inputType="text"
        android:textColorHint="@color/Darkgreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:autofillHints=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/texti" />

    <EditText
        android:textStyle="bold"
        android:id="@+id/textaa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/textaa"
        android:textColorHint="@color/Darkgreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/texta"
        android:inputType="textPassword"
        android:drawableStart="@drawable/key"
        android:drawablePadding="11dp"
        android:autofillHints="" />
    <Button
        android:layout_width="232dp"
        android:layout_height="78dp"
        android:layout_marginStart="160dp"
        android:backgroundTint="@color/Darkgreen"
        android:fontFamily="cursive"
        android:padding="14dp"
        android:shadowColor="@color/white"
        android:text="@string/connectez_vous"
        android:textAllCaps="false"
        android:textColor="@color/aftahgreen"
        android:textSize="28sp"
        android:textStyle="bold"
        app:iconTint="@color/Darkgreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textaa"
        app:layout_constraintVertical_bias="0.12"
        app:layout_constraintWidth_percent=".8"
        app:strokeColor="@color/Darkgreen"
        android:id="@+id/but"/>

    <TextView
        android:layout_width="293dp"
        android:layout_height="27dp"
        android:layout_marginEnd="116dp"
        android:text="@string/vous_n_tes_pas_inscrit"
        android:textAlignment="center"
        android:textColor="@color/Darkgreen"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/but"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:layout_width="176dp"
        android:layout_height="24dp"
        android:layout_marginEnd="4dp"
        android:id="@+id/bella"
        android:text="@string/insrivez_vous"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/but"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>